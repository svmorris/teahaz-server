server {
    listen 443 ssl;
    server_name th.<REPLACE_SERVER_HOSTNAME>;
    client_max_body_size 1G;

    ssl_certificate /etc/letsencrypt/live/th.<REPLACE_SERVER_HOSTNAME>/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/th.<REPLACE_SERVER_HOSTNAME>/privkey.pem;

    location ~ /.well-known {
        root /home/teahaz/static;
    }

    location / {
        include proxy_params;
        proxy_pass http://localhost:13337;
    }
}
