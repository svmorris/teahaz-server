server {
    listen 80;
    server_name <REPLACE_SERVER_HOSTNAME>;

    location /th/ {
        include proxy_params;
        return 301 https://$host$request_uri;
    }

    location / {
        root /teahouse/static;
    }

}

server {
    listen 443 ssl;
    server_name <REPLACE_SERVER_HOSTNAME>;
    client_max_body_size 1G;

    ssl_certificate /etc/letsencrypt/live/<REPLACE_SERVER_HOSTNAME>/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/<REPLACE_SERVER_HOSTNAME>/privkey.pem;

    location / {
        root /teahouse/static;
    }

    location /th/ {
        include proxy_params;
        proxy_pass http://localhost:13337;
    }
}
