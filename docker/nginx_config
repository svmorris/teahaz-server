server {
    listen 80;
    server_name teahaz.co.uk;

    location ~ /.well-known {
        root /home/teahaz/static;
    }

    location / {
        include proxy_params;
        proxy_pass http://localhost:13337;
    }
}


server {
    listen 443;
    ssl on;
    server_name teahaz.co.uk;
    ssl_certificate /home/teahaz/.keys/fullchain1.pem;
    ssl_certificate_key /home/teahaz/.keys/privkey1.pem;

    location ~ /.well-known {
        root /home/teahaz/static;
    }

    location / {
        include proxy_params;
        proxy_pass http://localhost:13337;
    }
}
